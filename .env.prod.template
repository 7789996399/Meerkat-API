# Meerkat API -- Production Environment Variables
# Copy this to .env.prod and fill in your values.
# Usage: docker compose -f docker-compose.prod.yml --env-file .env.prod up

# ── REQUIRED ───────────────────────────────────────────────────────

# Database (use a strong password in production)
POSTGRES_USER=meerkat
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=meerkat

# JWT signing secret (generate with: openssl rand -hex 32)
JWT_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL

# ── RECOMMENDED ────────────────────────────────────────────────────

# Stripe billing (get from https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Microsoft SSO (get from Azure Portal > App Registrations)
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_TENANT_ID=
MICROSOFT_REDIRECT_URI=https://api.meerkat.ai/auth/microsoft/callback

# OpenAI (for knowledge base embeddings via text-embedding-3-small)
OPENAI_API_KEY=sk-...

# Frontend URL (for CORS headers)
FRONTEND_URL=https://app.meerkat.ai

# ── OPTIONAL ───────────────────────────────────────────────────────

# API port (default 3000)
API_PORT=3000

# Log level (default: info)
LOG_LEVEL=info
