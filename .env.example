# Meerkat API -- Environment Variables
# Copy this to .env and fill in your values

# ── API Config ─────────────────────────────────────────────────────
PORT=3000
MEERKAT_ENV=development
MEERKAT_LOG_LEVEL=info

# ── Database ───────────────────────────────────────────────────────
DATABASE_URL=postgresql://meerkat:meerkat_dev@localhost:5432/meerkat

# ── Redis ──────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379

# ── Python Microservices (local dev -- use localhost) ──────────────
# In Docker, these are overridden by docker-compose.yml
ENTROPY_SERVICE_URL=http://localhost:8001
CLAIMS_SERVICE_URL=http://localhost:8002
PREFERENCE_SERVICE_URL=http://localhost:8003
NUMERICAL_SERVICE_URL=http://localhost:8004

# ── Stripe Billing ─────────────────────────────────────────────────
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PROFESSIONAL_PRICE_ID=

# ── Microsoft SSO (Azure AD) ──────────────────────────────────────
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=
JWT_SECRET=meerkat_jwt_dev_secret

# ── OpenAI (for knowledge base embeddings) ─────────────────────────
OPENAI_API_KEY=

# ── Ollama (for semantic entropy LLM completions) ──────────────────
# Only needed if running semantic entropy checks (Enterprise tier)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b
